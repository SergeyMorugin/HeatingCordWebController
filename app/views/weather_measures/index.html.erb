<p id="notice"><%= notice %></p>

<h1>Weather Measures</h1>

<h2><%= "#{@weather_measures.count}/#{@all_records_count} offset #{@offset}" %></h2>
<%= line_chart @temperature_chart_data, height: '400px', label: 'Temperature',min: @temperature_chart_data.values.min, max: @temperature_chart_data.values.max %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Date Time</th>
      <th>Temperature</th>
      <th>Pressure</th>
      <th>Humidity</th>
      <th>Rainfall</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_measures.each do |weather_measure| %>
      <tr>
        <td><%= weather_measure.id %></td>
        <td><%= "#{weather_measure.created_at}" %></td>
        <td><%= "#{weather_measure.temperature} *C" %></td>
        <td><%= "#{weather_measure.pressure} mm" %></td>
        <td><%= "#{weather_measure.humidity} %" %></td>
        <td><%= "#{weather_measure.rainfall}" %></td>
        <!--<td><%= link_to 'Show', weather_measure %></td>
        <td><%= link_to 'Edit', edit_weather_measure_path(weather_measure) %></td>-->
        <td><%= link_to 'Destroy', weather_measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

